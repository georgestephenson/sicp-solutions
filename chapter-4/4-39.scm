(define (require p)
  (if (not p) (amb)))

(define (distinct? items)
  (cond ((null? items) true)
        ((null? (cdr items)) true)
        ((member (car items) (cdr items)) false)
        (else (distinct? (cdr items)))))

(define (proc-time-test proc description)
  (newline)
  (display "Time taken - ")
  (display description)
  (display ":")
  (newline)
  (define start-time (runtime))
  (proc)
  (display (- (runtime) start-time))
  (display " seconds")
  (newline))

